<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="2dip" >

    <!-- Title -->

    <RelativeLayout
        android:id="@+id/timelayout"
        android:layout_width="wrap_content"
        android:layout_height="17dip"
        >

        <ImageView
            android:id="@+id/timebar"
            android:layout_width="33dip"
            android:layout_height="112dip"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:src="@drawable/timebar"  />

        <TextView
            android:id="@+id/Read"
            android:layout_width="32dip"
            android:layout_height="13dip"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="3dip"
            android:gravity="center_horizontal"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="9dip" />

        <TextView
            android:id="@+id/TextHead1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="0dip"
            android:layout_marginTop="0dip"
            android:layout_toRightOf="@+id/timebar"
			android:gravity="center"
            android:text="TITLE"
            android:textColor="#333333"
            android:textSize="14dip"
            android:typeface="sans" />
    </RelativeLayout>
 <!-- Time -->

    <TextView
        android:id="@+id/TextHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timelayout"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="1dip"
        android:text="TIME"
        android:textColor="#666666"
        android:textSize="9dip" />
    <!-- Summery -->

    <TextView
        android:id="@+id/TextHead3"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:layout_below="@id/TextHead2"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="38dip"
        android:layout_marginTop="0dip"
        android:text="SUMMERY"
        android:textColor="#666666"
        android:textSize="9dip" />
    <!-- Rightend Duration -->


    <!-- Rightend Arrow -->

    <ImageView
        android:id="@+id/arrow6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/newepi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timelayout"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="0dip"
        android:layout_toRightOf="@+id/TextHead2"
        android:gravity="right"
        android:text="new"
        android:textColor="#ff0000"
        android:textSize="10dip"
        android:textStyle="bold"
        android:typeface="monospace" />



  
    </RelativeLayout>
